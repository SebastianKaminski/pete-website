<?xml version="1.0"?>
<config>
  <global>
    <models>
        <circatalog>
          <class>CIR_Catalog_Model</class>
        </circatalog>
    </models>
    <events>
      <catalog_product_get_final_price>
        <observers>
          <cir_catalog_price_observer>
            <type>singleton</type>
            <class>CIR_Catalog_Model_Price_Observer</class>
            <method>calculate_radiator_price</method>
          </cir_catalog_price_observer>
        </observers>
      </catalog_product_get_final_price>
    </events>
  </global>
</config>