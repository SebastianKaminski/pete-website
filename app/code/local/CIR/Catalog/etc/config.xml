<?xml version="1.0"?>
<config>
  <global>
    <models>
        <circatalog>
          <class>CIR_Catalog_Model</class>
        </circatalog>
    </models>
    <events>
      <checkout_cart_product_add_after>
        <observers>
          <cir_catalog_price_observer>
            <type>singleton</type>
            <class>CIR_Catalog_Model_Price_Observer</class>
            <method>calculate_radiator_price</method>
          </cir_catalog_price_observer>
        </observers>
      </checkout_cart_product_add_after>
      <catalog_product_load_after>
        <observers>
          <extra_options>
            <type>model</type>
            <class>CIR_Catalog_Model_Price_Observer</class>
            <method>catalog_product_load_after</method>
          </extra_options>
        </observers>
      </catalog_product_load_after>
      <sales_convert_quote_item_to_order_item>
        <observers>
            <extra_options>
                <type>model</type>
                <class>CIR_Catalog_Model_Price_Observer</class>
                <method>sales_convert_quote_item_to_order_item</method>
            </extra_options>
        </observers>
      </sales_convert_quote_item_to_order_item>
    </events>
  </global>
</config>